<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:text="12431"
                    android:layout_weight="1"
                    android:id="@+id/a1"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:text="12456"
                    android:layout_weight="1"
                    android:id="@+id/locoNumber"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:text="12333"
                    android:id="@+id/trainNo"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/v1"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:text="2019-01-02|20:25"
                    android:id="@+id/arrvdate"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingRight="2dp"
                        android:text="S"
                        android:id="@+id/ws"
                        android:textAlignment="center"
                        android:background="@drawable/singlecardviewedittextstyle"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingRight="2dp"
                        android:id="@+id/ff"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:background="@drawable/singlecardviewedittextstyle"
                        android:textColor="@android:color/black"
                        android:text="$"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/singlecardviewedittextstyle"
                        android:paddingRight="2dp"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:id="@+id/dw"
                        android:text="D"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/singlecardviewedittextstyle"
                        android:paddingRight="2dp"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:text=".1"
                        android:id="@+id/loc"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:textAlignment="center"
                        android:background="@drawable/singlecardviewedittextstyle"
                        android:layout_weight="1.8"
                        android:text="82/85"
                        android:id="@+id/wd"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="2019-01-02"
                    android:id="@+id/pdc"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:text="m24"
                    android:layout_weight="1"
                    android:id="@+id/schedules"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:text="m38"
                    android:layout_weight="1"
                    android:id="@+id/a2"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:text="m46"
                    android:id="@+id/a3"
                    android:layout_weight="1"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:text="Stage 1"
                    android:id="@+id/a4"
                    android:layout_weight="1"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:text="Stage 2"
                    android:layout_weight="1"
                    android:id="@+id/a5"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:text="Stage 3"
                    android:id="@+id/a6"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="Stage 4"
                    android:id="@+id/a7"
                    android:layout_weight="1"
                    android:background="@drawable/singlecardviewedittextstyle"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>




        </LinearLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>